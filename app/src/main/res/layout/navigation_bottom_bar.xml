<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_margin="0dp"
    android:background="@drawable/navigation_bottom_bar_corners"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingTop="15dp"
    android:paddingEnd="8dp"
    android:paddingBottom="20dp">

    <Button
        android:id="@+id/btn_dashboard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/square_icon"
        android:drawableTint="@color/white"
        android:fontFamily="@font/poppins_regular"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="4dp"
        android:text="Dashboard"
        android:stateListAnimator="@null"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="30dp" />


    <Button
        android:id="@+id/btn_phoneusage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/square_icon"
        android:drawableTint="@color/purple"
        android:fontFamily="@font/poppins_regular"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="4dp"
        android:stateListAnimator="@null"
        android:text="Phone usage"
        android:textColor="@color/purple"
        android:textSize="10dp"
        app:backgroundTint="@color/transparent"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/btn_socialmedia"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/square_icon"
        android:drawableTint="@color/purple"
        android:fontFamily="@font/poppins_regular"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:stateListAnimator="@null"
        android:padding="4dp"
        android:text="Social media"
        android:textColor="@color/purple"
        android:textSize="10dp"
        app:backgroundTint="@color/transparent"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/btn_alerts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:drawableTop="@drawable/square_icon"
        android:drawableTint="@color/purple"
        android:fontFamily="@font/poppins_regular"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="4dp"
        android:text="Alerts"
        android:textColor="@color/purple"
        android:textSize="10dp"
        android:stateListAnimator="@null"
        app:backgroundTint="@color/transparent"
        app:cornerRadius="30dp" />


</androidx.appcompat.widget.LinearLayoutCompat>


